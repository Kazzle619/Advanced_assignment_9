<tr>
  <td>
    <%= link_to user_path(user.id), user_id: user.id do %>
      <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '50x50' %><br>
      <%= user.name %>
    <% end %>
  </td>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td id="favorite-<%= book.id %>">
    <%= render 'books/favorite_button', book: book %>
  </td>
  <td>コメント数： <%= book.book_comments.count %></td>
  <td></td>
  <% if user.id == current_user.id %>
    <td>
      <%= link_to edit_book_path(book.id) do %>
        <button type="button" class="btn btn-success btn-block" aria-label="Left Align">Edit</button>
      <% end %>
    </td>
    <td>
      <%= link_to book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" do %>
        <button type="button" class="btn btn-danger btn-block" aria-label="Left Align">Destroy</button>
      <% end %>
    </td>
  <% end %>
</tr>
