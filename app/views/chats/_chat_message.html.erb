<tr>
<% if chat.user_id == current_user.id %>
  <td class="bg-success">
    <%= attachment_image_tag chat.user, :profile_image, format: 'jpeg', size: '50x50' %><br>
    <%= chat.user.name %>
  </td>
  <td class="bg-success"><%= chat.content %></td>
  <td></td>
  <td></td>
<% else %>
  <td></td>
  <td></td>
  <td><%= chat.content %></td>
  <td>
    <%= attachment_image_tag chat.user, :profile_image, format: 'jpeg', size: '50x50' %><br>
    <%= chat.user.name %>
  </td>
<% end %>
</tr>
